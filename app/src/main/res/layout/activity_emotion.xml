<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".emotionActivity">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/nav_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="525dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="81dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="154dp"
        android:background="@drawable/border"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.482">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="30dp"
            android:layout_centerHorizontal="true"
            android:text="@string/emotionIntro"
            android:textSize="30sp"
            app:fontFamily="sans-serif-medium" />

        <Button
            android:id="@+id/emotion1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="210dp"
            android:background="@drawable/ic_emotion_happy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/emotion2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="210dp"
            android:background="@drawable/ic_emotion_smiling" />

        <Button
            android:id="@+id/emotion3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="160dp"
            android:layout_marginTop="210dp"
            android:background="@drawable/ic_emotion_unhappy" />

        <Button
            android:id="@+id/emotion4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="210dp"
            android:layout_marginBottom="120dp"
            android:background="@drawable/ic_emotion_mad"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/emotion5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/emotion1"
            android:layout_marginStart="280dp"
            android:layout_marginTop="0dp"

            android:background="@drawable/ic_emotion_sad"
            app:layout_constraintBaseline_toBaselineOf="@+id/emotion2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="219dp"
            android:layout_height="62dp"
            android:layout_alignEnd="@+id/textView3"
            android:layout_marginTop="275dp"
            android:layout_marginEnd="53dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/intro"
            tools:layout_editor_absoluteX="67dp"
            tools:layout_editor_absoluteY="428dp" />

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:layout_marginStart="95dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="330dp"
            android:background="@drawable/border"
            android:gravity="center">

            <EditText
                android:id="@+id/expression"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:cursorVisible="false"
                android:layout_marginStart="13dp"
                android:layout_marginTop="0dp"
                android:background="@null"
                android:gravity="center" />
        </RelativeLayout>

        <Button
            android:id="@+id/submitExpressionButton"
            android:layout_width="71dp"
            android:layout_height="27dp"
            android:layout_marginStart="210dp"
            android:layout_marginTop="430dp"
            android:background="@drawable/button_border"
            android:text="@string/submit"
            android:textColor="@color/white" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>